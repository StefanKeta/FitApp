<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/app_padding_medium"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_bar_header_profile_iv"
        android:layout_width="@dimen/logo_medium"
        android:layout_height="@dimen/logo_medium"
        android:layout_margin="@dimen/app_margin_medium"
        app:shapeAppearanceOverlay="@style/ShapePhoto.Round"
        tools:ignore="ContentDescription"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/nav_bar_header_name_tv"
        style="@style/App.Widget.TextView.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_medium"
        android:textSize="@dimen/text_size_titles"
        tools:text="Profile name" />

</LinearLayout>