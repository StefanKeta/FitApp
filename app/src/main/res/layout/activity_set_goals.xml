<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetGoalsActivity"
    android:paddingVertical="@dimen/app_vertical_padding_standard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_form_fields_margin_between"
            android:gravity="center"
            android:text="Set your goals!"
            android:textSize="@dimen/text_size_titles"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_form_fields_margin_between"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your height:"
                    android:textSize="@dimen/text_size_list_item"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_set_goal_height_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="185cm" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your weight:"
                    android:textSize="@dimen/text_size_list_item"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_set_goal_weight_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="85kg" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_form_fields_margin_between"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/app_padding_small"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/login_form_fields_margin_between"
                        />

                    <TextView
                        android:id="@+id/activity_set_goal_protein_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="220g"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_list_item_important"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/app_padding_small"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/login_form_fields_margin_between"
                        />

                    <TextView
                        android:id="@+id/activity_set_goal_carbs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="220g"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_list_item_important"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/app_padding_small"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/login_form_fields_margin_between"
                        />

                    <TextView
                        android:id="@+id/activity_set_goal_fat_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="220g"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_list_item_important"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textSize="@dimen/text_size_titles"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2600"
                    android:textSize="@dimen/text_size_titles"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I want to :"
            android:textSize="@dimen/text_size_list_item_important"
            android:textStyle="bold"/>


            <RadioGroup
                android:id="@+id/activity_set_goal_goal_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingHorizontal="@dimen/app_horizontal_padding_standard"
                android:layout_marginBottom="@dimen/login_form_fields_margin_between">

                <RadioButton
                    android:id="@+id/activity_set_goal_lose_fat_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lose fat" />

                <RadioButton
                    android:id="@+id/activity_set_goal_maintain_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maintain" />

                <RadioButton
                    android:id="@+id/activity_set_goal_gain_weight_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gain weight" />


            </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="My activity is :"
            android:textSize="@dimen/text_size_list_item_important"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/activity_set_goal_activity_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/app_horizontal_padding_standard"
            android:layout_marginBottom="@dimen/login_form_fields_margin_between"
            >


            <RadioButton
                android:id="@+id/activity_set_goal_activity_sedentary_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sedentary (little to no exercise)"
                />

            <RadioButton
                android:id="@+id/activity_set_goal_activity_light_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light (3-5 times/week, light intensity)"
                />

            <RadioButton
                android:id="@+id/activity_set_goal_activity_moderate_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moderate (3-5 times/week, moderate intensity)"
                />

            <RadioButton
                android:id="@+id/activity_set_goal_activity_active_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High intensity (4-6 times/week, high intensity)"
                />

            <RadioButton
                android:id="@+id/activity_set_goal_activity_very_active_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="Very high intensity (6-7 times/week, very high intensity)"
                />
        </RadioGroup>

        <Button
            android:id="@+id/activity_set_goal_calculate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate!"/>
    </LinearLayout>

</ScrollView>