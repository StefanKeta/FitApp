<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.main.profile.RecordsFragment"
    android:paddingVertical="@dimen/app_padding_medium">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_records_group_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_margin_medium"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_marginBottom="@dimen/app_margin_small"
        >

        <AutoCompleteTextView
            android:id="@+id/fragment_records_group_actv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/exercise_text_group"
            android:inputType="none"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="@dimen/logo_small"
        android:layout_height="@dimen/logo_small"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_medal"
        android:layout_marginVertical="@dimen/app_margin_small"
        tools:ignore="ContentDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_records_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>